<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/posiblefondo"
    android:padding="2dp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.example.tateti.view.TableroView
                android:id="@+id/tablero_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.example.tateti.view.TableroView
                android:id="@+id/tablero_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.example.tateti.view.TableroView
                android:id="@+id/tablero_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.example.tateti.view.TableroView
                android:id="@+id/tablero_21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <com.example.tateti.view.TableroView
                android:id="@+id/tablero_22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <com.example.tateti.view.TableroView
                android:id="@+id/tablero_23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.example.tateti.view.TableroView
                android:id="@+id/tablero_31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <com.example.tateti.view.TableroView
                android:id="@+id/tablero_32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <com.example.tateti.view.TableroView
                android:id="@+id/tablero_33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="You"/>

            <com.example.tateti.view.CeldaView
                android:id="@+id/celda_1p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Opp."/>

            <com.example.tateti.view.CeldaView
                android:id="@+id/celda_2p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>